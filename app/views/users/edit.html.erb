<h3>プロフィールの編集</h3>

<%= form_for @user do |f|%>

<%= render 'layouts/error', model: f.object %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_area :introduction, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "プロフィール変更" %>
  </div>
<% end %>