<% @user ||= current_user %>
<div class="stats">
  <%= link_to "フォロー", following_user_path(@user) %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>

  <%= link_to "フォロワー", followers_user_path(@user) %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
</div>