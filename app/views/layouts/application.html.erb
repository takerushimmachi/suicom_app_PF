<!DOCTYPE html>
<html>
  <head>
    <title>Suicom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">

<nav class="navbar navbar-expand-lg navbar-light">
  <div class="navbar-brand"><%= link_to root_path do %><div style="color: #ffff;">Suicom</div><% end %></div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'マイページ', mypage_users_path %>
          </li>
          <li class="nav-item">
            <%= link_to '他のユーザー', users_path %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
          </li>
      <% else %>
          <li class="nav-item">
            <%= link_to 'ログイン', user_session_path %>
          </li>
          <li class="nav-item">
            <%= link_to '新規登録', new_user_registration_path %>
          </li>

          <div class="dropdown drop-hover">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
    MENU
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <li>
      <a class="dropdown-item" href="#/users/sign_out">ログアウト</a>
    </li>
    <li>
      <a class="dropdown-item" href="#/users">他のユーザー</a>
    </li>
    <li>
      <a class="dropdown-item" href="#/users/mypage">マイページ</a>
    </li>
  </ul>
</div>
      <% end %>
    </ul>
  </div>
</nav>
    </header>

<div class="container">
        <%= yield %>
</div>
  </body>
</html>